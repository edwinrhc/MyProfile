---
const menuItems = [
    { name: "Sobre m√≠", href: "/sobre-mi" },
    { name: "Proyectos", href: "/proyectos" },
    { name: "Contacto", href: "/contacto" },
    { name: "Blog", href: "/blog" },
];
---
<header class="fixed top-0 left-0 w-full z-50 transition-all duration-300 ease-in-out">
    <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="text-2xl font-bold text-blue-600 tracking-tight">Edwin HC</a>

        <!-- Desktop menu -->
        <nav class="hidden md:flex items-center space-x-6 text-gray-700 font-medium">
            {
                menuItems.map(item => (
                        <a href={item.href} class="hover:text-blue-600 transition">{item.name}</a>
                ))
            }
            <!--<a-->
            <!--        href="/public/pdf/Cv-Edwin.pdf"-->
            <!--        target="_blank"-->
            <!--        rel="noopener noreferrer"-->
            <!--        class="ml-4 inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition"-->
            <!--&gt;-->
            <!--    Descargar CV-->
            <!--</a>-->
        </nav>

        <!-- Mobile Hamburger -->
        <button id="menu-toggle" class="md:hidden focus:outline-none">
            <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" stroke-width="2"
                 viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                <path id="menu-icon" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden bg-white px-6 pt-4 pb-6 space-y-4 hidden">
        {
            menuItems.map(item => (
                    <a href={item.href} class="block text-gray-700 text-lg hover:text-blue-600 close-mobile-menu">
                        {item.name}
                    </a>
            ))
        }
        <!--<a-->
        <!--        href="/public/pdf/Cv-Edwin.pdf"-->
        <!--        target="_blank"-->
        <!--        rel="noopener noreferrer"-->
        <!--        class="inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition"-->
        <!--&gt;-->
        <!--    Descargar CV-->
        <!--</a>-->
    </div>

    <!-- Script -->
    <script is:inline>
        const toggleBtn = document.getElementById('menu-toggle');
        const menu = document.getElementById('mobile-menu');
        const icon = document.getElementById('menu-icon');
        const closeLinks = document.querySelectorAll('.close-mobile-menu');

        let isMenuOpen = false;

        toggleBtn.addEventListener('click', () => {
            isMenuOpen = !isMenuOpen;
            menu.classList.toggle('hidden', !isMenuOpen);
            icon.setAttribute(
                'd',
                isMenuOpen
                    ? 'M6 18L18 6M6 6l12 12'
                    : 'M4 6h16M4 12h16M4 18h16'
            );
        });

        closeLinks.forEach(link => {
            link.addEventListener('click', () => {
                isMenuOpen = false;
                menu.classList.add('hidden');
                icon.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
            });
        });

        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 30) {
                header.classList.add('bg-white/90', 'backdrop-blur-md', 'shadow');
            } else {
                header.classList.remove('bg-white/90', 'backdrop-blur-md', 'shadow');
            }
        });
    </script>
</header>
