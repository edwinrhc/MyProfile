<script is:inline>
    const bug = document.getElementById('bug');

    function moveBug() {
        const x = Math.random() * (window.innerWidth - 50);
        const y = Math.random() * (window.innerHeight - 50);
        bug.style.transform = `translate(${x}px, ${y}px) rotate(${Math.random() * 360}deg)`;
    }

    // Transición suave
    bug.style.transition = 'transform 2.5s ease-in-out';

    // Posición inicial
    requestAnimationFrame(() => {
        moveBug();
        setInterval(moveBug, 6000);
    });

    // Reacciona al acercarse el cursor
    document.addEventListener('mousemove', (e) => {
        const rect = bug.getBoundingClientRect();
        const dist = Math.hypot(
            rect.left + rect.width / 2 - e.clientX,
            rect.top + rect.height / 2 - e.clientY
        );
        if (dist < 100) {
            moveBug();
        }
    });

    // 💥 Explosión al hacer clic
    bug.addEventListener('click', () => {
        bug.style.transition = 'transform 0.2s ease-in-out, opacity 0.4s ease-out';
        bug.style.transform += ' scale(2) rotate(720deg)';
        bug.style.opacity = '0';

        setTimeout(() => {
            bug.remove();
        }, 400); // lo remueve después de la explosión
    });
</script>







